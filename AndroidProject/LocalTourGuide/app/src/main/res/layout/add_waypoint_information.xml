<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="Waypoint Order: " />

    <EditText
        android:id="@+id/waypointOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:ems="10"
        android:hint="Waypoint order number"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:text="POI Information: " />

    <EditText
        android:id="@+id/textInformation"
        android:layout_width="wrap_content"
        android:layout_height="200sp"
        android:layout_column="1"
        android:layout_row="1"
        android:ems="10"
        android:inputType="text"

        android:text="" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_height="wrap_content"
        android:text="Select Location" />


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_height="wrap_content"
        android:text="Save Waypoint" />


    <TextView
        android:id="@+id/waypointLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:text="Selected Waypoint" />
</GridLayout>