<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:layout_margin="12sp"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tour Title: "
        android:layout_column="0"
        android:layout_row="0"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/tourTitleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:ems="10"
        android:inputType="textPersonName" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Tour City: "
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tourCityId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Tour Author: "
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tourAuthorId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/waypointAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:paddingLeft="60sp"
        android:paddingRight="60sp"
        android:layout_row="3"
        android:text="Add Waypoint"
        android:onClick="addWaypoint"/>
    <Button
        android:id="@+id/saveTourButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:paddingLeft="70sp"
        android:paddingRight="70sp"
        android:layout_row="5"
        android:onClick="saveTour"
        android:text="Save Tour" />

</GridLayout>
